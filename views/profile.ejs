<!DOCTYPE html>
<html>
  <head>
    <title>Profile</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/home">Skill Swap</a>
        <span class="text-white"><%= user.name %></span>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="card p-4">
        <h3><%= profile.name %></h3>
        <p><%= profile.email %></p>

        <p><strong>Phone:</strong> <%= profile.phone || "—" %></p>
        <p><strong>Location:</strong> <%= profile.location || "—" %></p>
        <p><strong>Title:</strong> <%= profile.title || "—" %></p>

        <hr />

        <h5>Skills I Can Teach</h5>
        <ul>
          <% skills.filter(s => s.skill_type === 'teach').forEach(s => { %>
          <li>
            <%= s.skill_name %> (<%= s.category %>) <% if (isOwner) { %>
            <form
              method="POST"
              action="/profile/skill/delete/<%= s.skill_name %>"
              style="display: inline"
            >
              <button class="btn btn-sm btn-danger ms-2">x</button>
            </form>
            <% } %>
          </li>
          <% }) %>
        </ul>
        <h5>Skills I Want to Learn</h5>
        <ul>
          <% skills.filter(s => s.skill_type === 'learn').forEach(s => { %>
          <li>
            <%= s.skill_name %> (<%= s.category %>) <% if (isOwner) { %>
            <form
              method="POST"
              action="/profile/skill/delete/<%= s.skill_name %>"
              style="display: inline"
            >
              <button class="btn btn-sm btn-danger ms-2">x</button>
            </form>
            <% } %>
          </li>
          <% }) %>
        </ul>

        <% if (isOwner) { %>
        <hr />

        <h4>Edit Profile</h4>

        <form method="POST" action="/profile/edit">
          <input
            class="form-control mb-2"
            name="name"
            value="<%= profile.name %>"
          />
          <input
            class="form-control mb-2"
            name="phone"
            value="<%= profile.phone || '' %>"
          />
          <input
            class="form-control mb-2"
            name="location"
            value="<%= profile.location || '' %>"
          />
          <input
            class="form-control mb-2"
            name="title"
            value="<%= profile.title || '' %>"
          />
          <button class="btn btn-primary">Save Changes</button>
        </form>

        <hr />

        <h5>Add Skill</h5>
        <form method="POST" action="/profile/skill/add" class="row g-2">
          <div class="col-md-4">
            <input
              class="form-control"
              name="skill_name"
              placeholder="Skill"
              required
            />
          </div>
          <div class="col-md-3">
            <select class="form-select" name="skill_type">
              <option value="teach">Teach</option>
              <option value="learn">Learn</option>
            </select>
          </div>
          <div class="col-md-3">
            <select class="form-select" name="category">
              <option>Development</option>
              <option>Design</option>
              <option>Music</option>
              <option>Language</option>
              <option>Business</option>
            </select>
          </div>
          <div class="col-md-2">
            <button class="btn btn-dark w-100">Add</button>
          </div>
        </form>
        <% } %>
      </div>
    </div>
  </body>
</html>
